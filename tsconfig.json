{
	"compilerOptions": {
		"allowJs": true,
		"target": "es2017",
		"alwaysStrict": true,
		"module": "es2015",
		"lib": ["dom", "esnext"],
		"outDir": "js",
		"sourceMap": false,
		"removeComments": true,
		"noUnusedLocals": true,
		"noUnusedParameters": true,
		"noImplicitReturns": true,
		"noFallthroughCasesInSwitch": true
	},
	"include": [
		"./src/ts/*.ts"
	]
}
