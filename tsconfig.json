{
	"compilerOptions": {
		"allowJs": true,
		"target": "ES2017",
		"alwaysStrict": true,
		"module": "ES2015",
		"lib": ["dom", "ES2017"],
		"outDir": "public/js",
		"sourceMap": false,
		"removeComments": true,
		"noUnusedLocals": true,
		"noUnusedParameters": true,
		"noImplicitReturns": true,
		"noFallthroughCasesInSwitch": true,
		"forceConsistentCasingInFileNames": true
	},
	"include": [
		"./src/ts/*.ts"
	]
}
